{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*@src": [
                "./src/*"
            ],
            "*@assets": [
                "./assets/*"
            ],
            "*@components": [
                "./src/components/*"
            ],
            "*@config": [
                "./config/*"
            ],
            "*@hooks": [
                "./src/hooks/*"
            ],
            "*@routes": [
                "./src/routes/*"
            ],
            "*@screens": [
                "./src/screens/*"
            ],
            "*@services": [
                "./src/services/*"
            ],
            "*@styles": [
                "./src/styles/*"
            ],
            "*@utils": [
                "./src/utils/*"
            ],
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ]
}
